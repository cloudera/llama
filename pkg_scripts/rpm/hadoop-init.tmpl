# Starts Hadoop configuration @HADOOP_CONF_NAME@ 
# 
# chkconfig: 2345 90 10
# description: Hadoop @HADOOP_CONF_NAME@

source /etc/rc.d/init.d/functions

RETVAL=0

start() {
  echo -n $"Starting Hadoop config (@HADOOP_CONF_NAME@): "
  for service in @HADOOP_SERVICES@
  do
  	daemon --user @HADOOP_USERNAME@ @HADOOP_COMMON_ROOT@/bin/hadoop-daemon.sh --config "@HADOOP_CONF_DIR@" start $service
	RETVAL=$?
        [ $RETVAL -eq 0 ] || return $RETVAL
  done
  touch "/var/lock/subsys/hadoop-conf-@HADOOP_CONF_NAME@"
  return 0
}

stop() {
  echo -n $"Stopping Hadoop config (@HADOOP_CONF_NAME@): "
  for service in @HADOOP_SERVICES@
  do
  	daemon --user @HADOOP_USERNAME@ @HADOOP_COMMON_ROOT@/bin/hadoop-daemon.sh --config "@HADOOP_CONF_DIR@" stop $service
  	RETVAL=$?
	[ $RETVAL -eq 0 ] || return $RETVAL
  done
  rm -f "/var/lock/subsys/hadoop-conf-@HADOOP_CONF_NAME@"
  return 0
}

restart() {
  stop
  start
}

condrestart(){
  [ -e "/var/lock/subsys/hadoop-conf-@HADOOP_CONF_NAME@" ] && restart || :
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  condrestart|try-restart)
    condrestart
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart|try-restart}"
    exit 1
esac

exit $RETVAL
