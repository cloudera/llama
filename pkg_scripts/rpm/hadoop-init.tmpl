# Starts a Hadoop @HADOOP_DAEMON@
# 
# chkconfig: 2345 90 10
# description: Hadoop @HADOOP_DAEMON@

source /etc/rc.d/init.d/functions

RETVAL=0
desc="Hadoop @HADOOP_DAEMON@ daemon"

start() {
  echo -n $"Starting $desc (@HADOOP_PROG@): "
  daemon --user @HADOOP_USERNAME@ @HADOOP_PREFIX@/bin/hadoop-daemon.sh --config "@HADOOP_CONF_DIR@" start @HADOOP_DAEMON@
  RETVAL=$?
  echo
  [ $RETVAL -eq 0 ] && touch /var/lock/subsys/@HADOOP_PROG@
  return $RETVAL
}

stop() {
  echo -n $"Stopping $desc (@HADOOP_PROG@): "
  daemon --user @HADOOP_USERNAME@ @HADOOP_PREFIX@/bin/hadoop-daemon.sh --config "@HADOOP_CONF_DIR@" stop @HADOOP_DAEMON@
  RETVAL=$?
  sleep 5
  echo
  [ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/@HADOOP_PROG@
}

restart() {
  stop
  start
}

condrestart(){
  [ -e /var/lock/subsys/@HADOOP_PROG@ ] && restart || :
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  condrestart|try-restart)
    condrestart
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart|try-restart}"
    exit 1
esac

exit $RETVAL
