logMover = PythonTarget(
  sources=[ "src/common.py",
            "src/db",
            "src/log_to_db.py",
            "src/log_to_dbs",
            "src/persist.py",
            "src/persisters",
            "src/prune.py",
            "src/pruners",
            "src/settings.py",
            "src/db_init.sql",
            "src/db_user_and_db.sql"])

logMoverTest = PythonTestTarget(
  sources = ["src/tests"],
  mainModule = "src/run_tests.py",
  requiredTargets = [":logMover"])

# packaging the log mover up for use in the tarball
release = PythonRedistTarget(
  distribName     = "log_mover",
  requiredTargets = [ ":logMover" ])

